{%extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="Customername">Customer Name:</label>
        {{ form_widget(form.Customername,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Enter customer name'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.Customername) }}
        </div>
    </div>
    <div class="form-group">
        <label for="Customermail">Customer Email:</label>
        {{ form_widget(form.Customermail,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Customer email'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="Customerphone">Phone number:</label>
        {{ form_widget(form.Customerphone,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Phone number'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="Customeraddress">Address:</label>
        {{ form_widget(form.Customeraddress,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Address'
            }
        }) }}
    </div>

    <input type="submit" name="create_customer" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
